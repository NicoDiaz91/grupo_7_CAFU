<!DOCTYPE html>
<!--Head-->
<%- include('../partials/head.ejs') %>
<link rel="stylesheet" href="css/productAdd.css">
</head>

<body>
  <!--Navbar-->
  <%- include('../partials/navBar.ejs') %>
  <!--Ingreso de producto-->
  <main>
    <section class="row">
      <article class="col-12">
        <h1 class="text-center mt-3">ACTUALIZAR</h1>
      </article>
      <form action="/productEdit/<%= camisetaEditar.id %>?_method=PUT" method="POST" enctype="multipart/form-data"
        class="w-100">
        <article class="col-12 d-flex flex-column justify-content-center">
          <input type="text" name="title" class="w-100 text-center"
            placeholder="Indique el nombre del club al cual corresponda la nueva camiseta">
          </div>
          <!--Categoría-->
          <div class="card shadow p-3 mb-3 bg-white bg-light alto">
            <h5 class="card-title text-center">CATEGORÍA</h5>
            <div class="d-flex justify-content-center flex-wrap form-group">
              <select name="category" id="" class="form-control">
                <option selected>Seleccione una categoria</option>
                <% categorias.forEach(categoria => { %>
                <option value="<%= categoria.id %>"><%= categoria.name %></option>
                <% }) %>
              </select>
            </div>
          </div>
          <!--Datos-->
          <div class="card shadow p-3 mb-3 bg-white bg-light alto">
            <h5 class="card-title text-center flex-column flex-wrap">DATOS</h5>
            <div class="justify-content-center d-flex flex-md-row flex-lg-row">
              <div class="col-md-3 mb-2 ubicacion">
                <label for="validationDefault04 align-self-start">LIGA</label>
                <select class="custom-select form-control" id="validationDefault04" name="league" required>
                  <option selected disabled value="">Elegir...</option>
                  <% ligas.forEach(liga => { %>
                  <option value="<%= liga.id %>"><%= liga.name %></option>
                  <% }) %>
                </select>
              </div>
              <div class="col-md-3 mb-2 ubicacion">
                <label for="validationDefault04">MARCA</label>
                <select class="custom-select" id="validationDefault04" name="brand" required>
                  <option selected disabled value="">Elegir...</option>
                  <% marcas.forEach(marca=>{ %>
                    <option value="<%= marca.id %>"><%= marca.name %></option>
                  <% }) %>
                </select>
              </div>
              <div class="col-md-3 mb-2 ubicacion">
                <label for="validationDefault04">TEMPORADA</label>
                <select class="custom-select" id="validationDefault04" name="season" required>
                  <option selected value="">Elegir...</option>
                  <% temporadas.forEach(temporada => { %>
                  <option value="<%= temporada.id %>"><%= temporada.name %></option>
                  <% }) %>
                </select>
              </div>
            </div>
          </div>
          <!--Precio/Stock-->
          <div class="card shadow p-3 mb-3 bg-white bg-light alto">
            <div class="justify-content-center d-flex flex-md-row flex-lg-row">
              <label>Stock</label>
              <div class="col-md-3 mb-2">
                <input type="number" name="stock" value="">
              </div>
              <label>Precio</label>
              <div class="col-md-3 mb-2">
                $<input type="number" name="price" value="">
              </div>
            </div>
          </div>
          <!--Imágenes-->
          <div class="card shadow p-3 mb-3 bg-white bg-light custom-file alto">
            <input type="file" name="image" class="">
          </div>
          <div class="d-flex justify-content-center mb-3">
            <button type="submit" class="btn btn-dark align-center confirmar">ACTUALIZAR</button>
            <a href="/productAdmin" class="btn btn-danger">VOLVER</a>
          </div>
        </article>
      </form>
    </section>

  </main>
  <!-- Footer -->
  <%- include('../partials/footer.ejs') %>
</body>

</html>