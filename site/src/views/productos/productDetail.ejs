<!DOCTYPE html>
<!--Head-->
  <%- include('../partials/head.ejs') %>
  <link rel="stylesheet" href="css/productDetail.css">
</head>

<body>
  <!--Navbar-->
  <%- include('../partials/navbar.ejs') %>

  <section class="container my-4">
    <div class="row">
      <div id="imagen" class="col-12 col-sm-7 my-3">
        <img class="img-fluid mt-2" src="/img/<%= miCamiseta.image %>" alt="">
      </div>
      <div id="detalle" class="col-12 col-sm-5">
        <div class="row my-2 text-center">
          <div class="col-12 col-sm-12">
            <h2><%= miCamiseta.title%></h2>
            <p class="precio">$ <%= miCamiseta.price %></p>
            <% categorias.forEach(categoria => { %>
            <% if(miCamiseta.categorys_id == categoria.id){ %>
            <p class="categoria">Camiseta: <%= categoria.name %></p>
            <% } %>
            <% }) %>
            <% ligas.forEach(liga => { %>
            <% if(miCamiseta.leagues_id == liga.id){ %>
            <p class="liga">Liga de <%= liga.name %></p>
            <% } %>
            <% }) %>
            <% marcas.forEach(marca =>{ %>
            <% if(miCamiseta.brands_id == marca.id){ %>
            <p class="marca"><%= marca.name %></p>
            <% } %>
            <% }) %>
            <% temporadas.forEach(temporada =>{ %>
            <% if(miCamiseta.seasons_id == temporada.id){ %>
              <p class="temporada">Temporada: <%= temporada.name %></p>
            <% } %>
            <% }) %>
            <p class="stock">Stock: <%= miCamiseta.stock %></p>
            <a href="/productCart/<%= miCamiseta.id%>" class="btn btn-secondary">AGREGAR AL CARRITO</a>
            <a href="/productCart/<%=miCamiseta.id%>" class="btn btn-dark">AGREGAR AL WISH LIST</a>
          </div>
        </div>
        <div class="row text-center">
          <div class="col-12 col-sm-12">
            <h5>Comentarios
              <hr>
            </h5>
            <form action="comentario.html">
              <textarea name="comentario" id="comentario" cols="30" rows="10"></textarea>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="row">

  </section>
  <section class="container">
    <div class="row my-5 bg-dark">
      <div class="col-6 col-sm-2 p-2">
        <img src="img/Camiseta_Futbol_Croacia_Primera_2018_MMM.jpg" alt="" class="img-fluid">
      </div>
      <div class="col-6 col-sm-2 p-2">
        <img src="img/Camiseta_Futbol_Croacia_Primera_2018_MMM.jpg" alt="" class="img-fluid">
      </div>
      <div class="col-6 col-sm-2 p-2">
        <img src="img/Camiseta_Futbol_Croacia_Primera_2018_MMM.jpg" alt="" class="img-fluid">
      </div>
      <div class="col-6 col-sm-2 p-2">
        <img src="img/Camiseta_Futbol_Croacia_Primera_2018_MMM.jpg" alt="" class="img-fluid">
      </div>
      <div class="col-6 col-sm-2 p-2">
        <img src="img/Camiseta_Futbol_Croacia_Primera_2018_MMM.jpg" alt="" class="img-fluid">
      </div>
      <div class="col-6 col-sm-2 p-2">
        <img src="img/Camiseta_Futbol_Croacia_Primera_2018_MMM.jpg" alt="" class="img-fluid">
      </div>
    </div>
  </section>
  <!--footer-->
  <%- include('../partials/footer') %>
</body>

</html>