<!--Head-->
<%- include('../partials/head.ejs') %>
<link rel="stylesheet" href="css/registro.css">
</head>

<body>
  <!--Navbar-->
  <%- include('../partials/navbar.ejs') %>
  <main class="min-75">
    <article class="col-12">
      <h1 class="text-center mt-3">REGISTRO</h1>
    </article>
    <article class="col-12">
      <p class="font-weight-lighter text-center "><a href="/login" class="text-decoration-none text-reset">INGRESA A
          LOGIN</a>, SI YA TENES CUENTA</p>
    </article>
    <div class="col-8 mx-auto bg-light ">
      <% if(typeof(errors) != 'undefined'){%>
      <ul class="alert alert-danger">
        <% errors.forEach(error => { %>
        <li><%= error.msg%></li>
        <%});%>
      </ul>
      <%}%>
    <div class="">
      <form action="/registro" method="POST" enctype="multipart/form-data"> 
        <div class="form-row">
          <div class="form-group col-md-6">
            <input type="text" class="form-control" name="firstName" placeholder="Nombre" value="<%= typeof old != 'undefined' ? old.firstName : '' %>">
    </div>
    <div class="form-group col-md-6">
      <input type="text" class="form-control" id="inputPassword4" name="lastName" placeholder="Apellido"
        value="<%= typeof old != 'undefined' ? old.last_name : '' %>">
    </div>
    </div>
    <div class="form-group">
      <input type="email" class="form-control" id="inputAddress" name="email" placeholder="Email"
        value="<%= typeof old != 'undefined' ? old.email : '' %>">
    </div>
    <div class="form-group">
      <input type="password" class="form-control" id="inputAddress2" name="password" placeholder="Contraseña">
    </div>
    <div class="form-group">
      <input type="password" class="form-control" id="inputAddress2" name="confirm_password"
        placeholder="Confirma Contraseña">
    </div>
    <div class="custom-file">
      <input type="file" name="images" placeholder="Eligí un avatar" value="">
    </div>
    <div class="form-row">
      <div class="form-group col-md-4">
        <select name="country" id="pais" class="form-control">
          <option selected>Seleccione pais</option>
          <% paises.forEach(pais=> { %>
          <option value="<%= pais.id%>"><%= pais.name %></option>
          <% }) %>
        </select>
      </div>
      <div class="form-group col-md-6">
        <select name="province" id="provincias" class="form-control">
          <option selected>Seleccione Provincia</option>
          <% provincias.forEach(provincia =>{ %>
          <option value="<%= provincia.id %>"><%= provincia.name %></option>
          <% }) %>

        </select>
      </div>
    </div>
    <div class="m-10">
      <button type="submit" class="btn btn-dark align-center m-10">REGISTRARSE</button>
    </div>
    </form>
  </main>
  <!-- Footer -->
  <%- include('../partials/footer') %>
</body>

</html>